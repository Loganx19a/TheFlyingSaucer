<UserControl x:Class="TheFlyingSaucer.PointOfSale.CashPaymentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheFlyingSaucer.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" ButtonBase.Click="HandleDecrement">-</Button>
        <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Text="{Binding Path=Count, RelativeSource={RelativeSource AncestorType=local:CashPaymentControl}}"/>
        <Button Grid.Column="2" ButtonBase.Click="HandleIncrement">+</Button>

        <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="3" Text="{Binding Path=Count, RelativeSource={RelativeSource AncestorType=local:CashPaymentControl}}"/>


    </Grid>
</UserControl>
