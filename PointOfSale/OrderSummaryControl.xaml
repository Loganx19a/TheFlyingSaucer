<UserControl x:Class="TheFlyingSaucer.PointOfSale.OrderSummaryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheFlyingSaucer.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="400">
    <DockPanel>
        

        <TextBlock DockPanel.Dock ="Top" TextAlignment="Center">Order #</TextBlock>
        <TextBlock DockPanel.Dock ="Top" TextAlignment="Center">Date</TextBlock>

        <TextBlock DockPanel.Dock ="Bottom" TextAlignment="Center">Total</TextBlock>
        <TextBlock DockPanel.Dock ="Bottom" TextAlignment="Center">Tax</TextBlock>
        <TextBlock DockPanel.Dock ="Bottom" TextAlignment="Center">Subtotal</TextBlock>

        <ListView ItemsSource="{Binding}"> </ListView>

    </DockPanel>
</UserControl>
