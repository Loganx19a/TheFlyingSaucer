<UserControl x:Class="TheFlyingSaucer.PointOfSale.OrderSummaryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheFlyingSaucer.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="400">
    <DockPanel>


        <TextBlock DockPanel.Dock ="Top" TextAlignment="Center" FontSize="16" FontWeight="Bold">Order #</TextBlock>
        <TextBlock DockPanel.Dock ="Top" TextAlignment="Center" FontSize="16" FontWeight="Bold">3/3/2023</TextBlock>

        <TextBlock DockPanel.Dock ="Bottom" TextAlignment="Left" FontSize="16" FontWeight="Bold">Total</TextBlock>
        <TextBlock DockPanel.Dock ="Bottom" TextAlignment="Left" FontSize="16" FontWeight="Bold">Tax</TextBlock>
        <TextBlock DockPanel.Dock ="Bottom" TextAlignment="Left" FontSize="16" FontWeight="Bold">Subtotal</TextBlock>

        <ListView ItemsSource="{Binding}"> </ListView>

    </DockPanel>
</UserControl>
